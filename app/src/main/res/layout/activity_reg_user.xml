<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.regUser">
    <RelativeLayout
        android:id="@+id/imglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profiledefault"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_user"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/upimage"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignBottom="@+id/profiledefault"
            android:layout_alignEnd="@+id/profiledefault"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_upload"
            android:focusable="true" />
    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Uname"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imglayout"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg"
            android:ems="10"
            android:gravity="center"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Bio"
        android:layout_width="match_parent"
        android:layout_below="@+id/Uname"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg"
            android:ems="10"
            android:hint="Bio"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_below="@+id/Bio"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/pGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/bg"
        android:ems="5"
        android:layout_centerHorizontal="true"
        android:hint="Gender"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:layout_below="@+id/email"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/pGender"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_below="@id/spinner"
    >

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"


        android:text="@string/Continue"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:icon="@drawable/ic_next"
        app:cornerRadius="20dp"
        android:layout_centerVertical="true"
        app:iconGravity="textEnd"
        android:onClick="Continue"
        app:iconTint="@null"
        app:rippleColor="@android:color/white" />


</RelativeLayout>

</RelativeLayout>