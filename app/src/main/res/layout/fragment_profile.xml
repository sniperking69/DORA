<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/parentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profFollo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:weightSum="100">

                <RelativeLayout
                    android:id="@+id/forProfImg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="30">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circularImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/common_google_signin_btn_icon_dark">

                    </de.hdodenhof.circleimageview.CircleImageView>

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/foloPortion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="75">

                    <include layout="@layout/followers_snipet">

                    </include>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout

                android:id="@+id/nameDescrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profFollo"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">

                <TextView

                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="200dp"
                    android:text="Adan Nelson"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic">

                </TextView>

                <TextView

                    android:id="@+id/userBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:text="This is his description. you can type whatever you want here"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp">

                </TextView>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nameDescrip"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp">

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/downvote">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
